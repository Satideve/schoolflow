# ops/envs/.env.example
# Copy this to your project root as `.env` and fill in secrets

DATABASE_URL=postgresql://admin:admin@db:5432/schoolflow
SECRET_KEY=change_me_generate_secure_random_base64
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# wkhtmltopdf - path to binary on Windows, example:
WKHTMLTOPDF_CMD="C:\\Program Files\\wkhtmltopdf\\bin\\wkhtmltopdf.exe"

# SMTP (for MailHog dev)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=school@schoolflow.local

# Razorpay (dev/test) â€“ leave blank to use FakeAdapter
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=
RAZORPAY_WEBHOOK_SECRET=

# Provider mode: fake | sandbox | prod
PROVIDER_MODE=fake

# App settings
APP_HOST=0.0.0.0
APP_PORT=8000
